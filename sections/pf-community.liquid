<style>
  .community-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
    box-sizing: border-box;
  }
  .community-container .community-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding-top: 60px;
  }

  .community-subtitle {
    font-size: 18px;
    font-family: Apris-regular;
    line-height: 25px;
    margin-bottom: 5px;
  }
  .community-title {
    font-size: 35px;
    line-height: 40px;
    margin-bottom: 25px;
  }

  .community-main-text {
    font-size: 15px;
    line-height: 22px;
  }
  .grid-product {
    width: calc((100% / 4));
    aspect-ratio: 1/1;
    line-height: 0;
    position: relative;
  }
  .grid-product .media-hover{
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    right: 0;
    text-align: center;
    cursor: pointer;
    
  }

  .grid-product:hover img{
    opacity: 0.3;
  }

  .hover-elements {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    visibility: hidden;
  
  }
  .grid-product:hover .hover-elements {
    visibility: visible;
  }
  .insta-logo{
    max-width: 120px;
    text-align: center;
    display: inline-block;
    margin-left: 7px;
    
  }

  .hover-elements button{
    font-weight: 700;
    margin-top: 15px;
    height: 35px;
    background-color: #373735;
    border: 0;
    padding: 0 50px;
    color: white;
    border-radius: 5px;
    box-sizing: border-box;
    
  }
</style>
<div class="community-container">
  <div class="community-content">
    <p class="community-subtitle">{{ section.settings.subtitle }}</p>
    <h2 class="community-title">{{ section.settings.title }}</h2>
    <p class="community-main-text">{{ section.settings.main_text }}</p>
  </div>
  <div>
    <div style="display: flex;overflow:hidden;flex-wrap:wrap">
      {% for block in section.blocks %}
        <a href="{{block.settings.url}}" class="grid-product">
          <img
            src="{{ block.settings.image| img_url: 'master'}}"
            alt="{{block.settings.image.alt}}"
            width="100%"
            height=""
            style="object-fit:cover;aspect-ratio:1/1"
          >
          <div class="media-hover" >
            <div class="hover-elements">
             
                <span class="insta-logo">{{ 'icon-instagram.svg' | inline_asset_content }}</span>
                <button>{{block.settings.button_text}}</button>
              
            </div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Community Section",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "main_text",
      "label": "Main Text"
    },
    {
      "type": "range",
      "id": "grid_columns",
      "label": "Number of columns in the grid",
      "step": 1,
      "min": 2,
      "max": 5,
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "Product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Third Party Logo"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Community Newsletter"
    }
  ]
}
{% endschema %}
