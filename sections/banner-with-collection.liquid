<style>
  .banner-container{
    display: flex;
    flex-wrap:wrap;
    margin-top:40px;
  }
  @media(max-width:769px) {
    
     .banner {
        width: 100% !important;
        min-height: 420px !important;
      }
      .right-banner{
        padding: 30px;
      }
      .banner-collection-content{
        transform: unset !important;
        position: unset !important;
        max-width: unset !important;
        min-height: 360px !important;
      }
  }
  
  .banner {
    min-height: 650px;
    width: 50%;
    position: relative;
    background-size: cover;
    background-position: center;
    box-sizing: border-box;
  }

  .right-banner {
    background-image: url('{{section.settings.image2| img_url: 'master'}}');
  }
  .left-banner {
    background-image: url('{{section.settings.image1| img_url: 'master'}}');
  }

  .banner-collection-content {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    max-width: 500px;
    min-height: 500px;
    display: flex;
    text-align: center;
    background-color: white;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .banner-collection-content h1 {
    font-size: 42px;
    line-height: 50px;
    font-weight: 400;
    margin-top: 0;
    color: #373735;
    margin-bottom: 12px;
  }
  .banner-collection-content p {
    font-size: 15px;
    line-height: 23px;
    max-width: 400px;
    padding: 0 20px;
    font-family: Poppins;
    margin-bottom: 24px;
    box-sizing: border-box;
    margin-top: 0;
  }
  .banner-collection-content a {
    background-color: black;
    color: white;
    display: inline-flex;
    height: 50px;
    width: 100%;
    max-width: 150px;
    justify-content: center;
    letter-spacing: 1px;
    font-size: 14px;
    line-height: 21px;
    border: 1px solid black;
    font-family: Poppins;
    text-decoration: none;
    align-items: center;
    margin: 0 auto;
  }
  .banner-collection-content a:hover {
    background-color: white;
    color: black;
  }
</style>
<div style="display: block;">
  <div class="banner-container">
    <div class="banner left-banner"></div>
    <div class="banner right-banner">
      <div class="banner-collection-content">
        <h1>{{ section.settings.title }}</h1>
        <p>{{ section.settings.subtitle }}</p>
        <a href="{{section.settings.link}}">{{ section.settings.link_text }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Banner & Collection",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Collection Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Collection Subtitle"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Image Banner & Collection"
    }
  ]
}
{% endschema %}
