<div class="container">
  <div>
    <h2>collections</h2>
    <div>
      <a href="{{ routes.collections_url }}"> collection_list </a>
    </div>
    <br>
    <div class="grid">
      {% for collection in collections %}
        <div class="grid-item">
          <a href="{{collection.url}}">
            <li>
              {{ collection.title | escape }}
            </li>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
  }

  .grid-item {
    background-color: #eaeaea;
    padding: 20px;
    text-align: center;
    border: 1px solid #ddd;
  }
</style>
