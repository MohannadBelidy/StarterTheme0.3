<style>
  .footer-container {
    background: #fff5f5;
    padding: 0 36px;
    padding-bottom: 24px;
    width: 100%;
    margin: 0 auto;
    box-sizing: border-box;
  }
  .footer-content {
    display: flex;
    flex-wrap: wrap;
  }
  .footer-main-content {
    position: relative;
    width: 100%;
    flex: 0 0 33.333%;
    max-width: 33.333%;
    margin-right: auto;
    padding: 0 36px;
    box-sizing: border-box;
  }
  .footer-main-content .title {
    font-size: 14px;
    font-weight: 400;
    line-height: 1rem;
    margin-bottom: 0.5rem;
  }
  .footer-main-content .title h6 {
    font-size: 18px;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 15px;
    font-family: Apris-Regular;
    margin-top: 0;
  }
  .footer-form-text {
    font-size: 12px;
    line-height: 18px;
    font-family: Poppins;
    color: black;
    margin-top: 0;
  }
  .footer-form-text p {
    margin-top: 0;
    margin-bottom: 3px;
  }
  .footer-form {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    width: 100%;
    height: 42px;
  }
  .form-input {
    position: relative;
    flex: 1 1 auto;
    width: 1%;
    display: block;
    line-height: 1rem;
    font-size: 1.2rem;
    height: auto;
    border-color: #373735 !important;
    padding: 5px 15px 0 0;
    color: #495057;
    font-family: Poppins;
    border-top: 0;
    border-right: 0;
    border-left: 0;
    background: transparent;
    outline: none;
    border-bottom: 1px solid #ced4da;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  }
  .footer-form button {
    text-transform: uppercase;
    font-size: 13px;
    cursor: pointer;
    position: relative;
    z-index: 2;
    font-family: Poppins;
    letter-spacing: 1px;
    height: auto;
    vertical-align: middle;
    padding: 9px 18px;
    color: #373735;
    background: transparent;
    border: 0;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out,
      box-shadow 0.15s ease-in-out;
  }
  .footer-form button:hover {
    color: white;
    background: #373735;
    border: 0;
  }
  .footer-custom-links {
    display: flex;
    gap: 15px;
    margin-top: 15px;
    font-size: 13px;
  }
  .footer-custom-links a {
    font-size: 1em;
    line-height: 1rem;
    color: #373735;
    font-family: Poppins;
    font-weight: inherit;
    text-transform: uppercase;
    cursor: pointer;
    letter-spacing: 0.5px;
    padding: 2px 0;
  }
  .footer-menu {
    padding: 72px 36px;
    margin: 24px 0;
    flex: 0 0 16.66667%;
    max-width: 16.66667%;
    position: relative;
    width: 100%;
    box-sizing: border-box;
  }
  .footer-menu-header {
    margin-bottom: 0.5rem;
    box-sizing: border-box;
  }
  .footer-menu-header h6 {
    margin-top: 0;
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 30px;
    font-family: Apris-Regular;
    line-height: 1.2;
    box-sizing: border-box;
    text-transform: uppercase;
  }
  .footer-menu-items {
    margin-bottom: 12px;
    box-sizing: border-box;
  }
  .footer-menu-items a {
    font-size: 15px;
    line-height: 21px;
    color: black;
    font-family: Poppins;
    text-decoration: none;
  }
  .footer-menu-items a:hover {
    text-decoration: underline;
  }
  .footer-social-media {
    padding: 0 36px;
    flex: 0 0 100%;
    max-width: 100%;
    width: 100%;
    position: relative;
    box-sizing: border-box;
  }
  .footer-social-media-header {
    margin-bottom: 12px;
  }
  .footer-social-media-header h6 {
    margin-top: 0;
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 15px;
    font-family: Apris-Regular;
    line-height: 1.2;
  }
  .footer-social-icons {
    display: flex;
    padding-left: 0;
    margin-top: 0;
    margin-bottom: 24px;
    list-style: none;
  }
  .footer-copyright {
    display: flex;
    justify-content: center;
    margin: 0;
  }
  .copyright-label {
    padding: 24px;
    width: auto;
    font-family: Poppins;
    font-size: 15px;
    line-height: 21px;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: black;
    box-sizing: border-box;
  }
</style>

<div class="footer-container">
  <div class="footer-content">
    <div class="footer-main-content">
      <div style="padding: 72px 0;margin: 24px 0;color:#373735">
        <div class="title">
          <h6>{{ section.settings.menu_header }}</h6>
        </div>
        {% form 'customer', class: 'footer-forms' %}
          <div class="footer-form-text">
            <p>{{ section.settings.text }}</p>
          </div>
          <div class="footer-form">
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input type="email" name="contact[email]" placeholder="{{section.settings.placeholder}}" class="form-input">
            <div style="margin-left: -1px;display:flex">
              <button>{{ section.settings.button }}</button>
            </div>
          </div>
        {% endform %}
        <div class="footer-custom-links">
          <a href="{{ section.settings.custom_link1_url }}">{{ section.settings.custome_link1 }}</a>
          <a href="{{ section.settings.custom_link2_url }}">{{ section.settings.custome_link2 }}</a>
          <a href="{{ section.settings.custom_link3_url }}">{{ section.settings.custome_link3 }}</a>
        </div>
      </div>
    </div>

    {% for block in section.blocks %}
      <div class="footer-menu">
        <div class="footer-menu-header">
          <h6>{{ block.settings.menu_header }}</h6>
        </div>
        {% for link in block.settings.menu.links %}
          <div class="footer-menu-items">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
    <div class="footer-social-media">
      <div class="footer-social-media-header">
        <h6>{{ section.settings.custom_links_header }}</h6>
      </div>
      <ul class="footer-social-icons">
        <li style="margin-right: 12px;">
          <a href="{{section.settings.instagram_link}}">{{ 'icon-instagram2.svg' | inline_asset_content }}</a>
        </li>
        <li style="margin-right: 12px;">
          <a href="{{section.settings.facebook_link}}">{{ 'icon-facebook.svg' | inline_asset_content }}</a>
        </li>
        <li style="margin-right: 12px;">
          <a href="{{section.settings.pinterest_link}}">{{ 'icon-pinterest.svg' | inline_asset_content }}</a>
        </li>
        <li style="margin-right: 12px;">
          <a href="{{section.settings.tiktok_link}}">{{ 'icon-tiktok.svg' | inline_asset_content }}</a>
        </li>
      </ul>
    </div>
  </div>
  <div style="text-align: center;">
    <img
      src="{{section.settings.logo|  img_url: 'master'}}"
      alt="{{section.settings.logo.alt}} "
      width=""
      height=""
      style="max-width: 200px;"
    >
  </div>
  <div class="footer-copyright">
    <div class="copyright-label">
      {{ section.settings.copyright }}
    </div>
  </div>
</div>

