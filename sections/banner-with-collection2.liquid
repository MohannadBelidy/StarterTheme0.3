<style>
  .banner-collection-container {
      display: flex;
      padding: 70px 10px;
      box-sizing: border-box;
      gap: 10px;
      flex-wrap: wrap;
  }
  @media(max-width:780px){
    .bgbanner-button{
      display: none !important;
    }
    .bgbanner-button-mobile{
      display: block !important;
      margin-top: 15px;
    }
    .bgbanner{
      width: 100% !important;
    }

  }
  @media(max-width:480px){
    .banner-collection-container{
      padding-bottom: 20px !important;
    }
    .bgbanner{
      background-position: unset !important;
      background-size:contain !important ;
    }
    .bgbanner-button-mobile{
      display: block !important;
      margin: 35px 0;
    }
    .bgbanner-content{
      padding: 20px !important;
      left: unset !important;
      transform: unset !important;
    }
  }
  .bgbanner{
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      width: 49.5%;
      min-height: 650px;
      position: relative;
  }
  .left-bgbanner{
      background-image: url( '{{section.settings.image1| img_url: 'master'}}' );
  }
  .right-bgbanner{
      background-image: url( '{{section.settings.image2| img_url: 'master'}}' );
  }
  .bgbanner-content {
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translate(-50%);
      text-align: center;
      width: 100%;
      background-color: white;
      padding: 40px 20px;
      max-width: 500px;
      z-index: 10;
      transition: 0.4s linear bottom;
      box-sizing: border-box;
  }
  .bgbanner:hover .bgbanner-content{
      bottom: 50px;

  }
  .bgbanner-content h1{
      font-size: 40px;
      line-height: 50px;
      margin: 0 0 12px;
      color: #373735;
      font-weight: 400;
  }
  .bgbanner-content p{
      font-size: 15px;
      line-height: 22px;
      color: black;
      max-width: 400px;
      margin: 0 auto;
      position: relative;
      background-color: white;
      font-family: Poppins;
  }
  .bgbanner-button{
      box-sizing: border-box;
      position: absolute;
      left: 50%;
      width: 100%;
      transform: translate(-50%);
      text-align: center;
      max-width: 500px;
      background-color: white;
      bottom: 0;
  }
  .bgbanner-button:hover{
      bottom: 0;
  }
  .bgbanner-button a{
      box-sizing: border-box;
      display: inline-flex;
      height: 50px;
      width: 100%;
      max-width: 150px;
      justify-content: center;
      align-items: center;
      letter-spacing: 1px;
      font-size: 14px;
      line-height: 21px;
      border: 1px solid;
      font-family: Poppins;
      margin-top: 15px;
      background-color: #245490;
      border-color:#245490;
      color: white;
      text-decoration: none;
  }
  .bgbanner-button a:hover{
      background-color: transparent;
      border-color: #245490;
      color: #10100f;
  }
  .bgbanner-button-mobile{
    display: none;

  }
  .bgbanner-button-mobile a{
    box-sizing: border-box;
    display: inline-flex;
    height: 50px;
    width: 100%;
    max-width: 150px;
    justify-content: center;
    align-items: center;
    letter-spacing: 1px;
    font-size: 14px;
    line-height: 21px;
    border: 1px solid;
    font-family: Poppins;
    margin-top: 15px;
    background-color: #245490;
    border-color:#245490;
    color: white;
    text-decoration: none;
  }
  .bgbanner-button-mobile a:hover{
    background-color: transparent;
    border-color: #245490;
    color: #10100f;
  }
</style>

<div class="banner-collection-container">
  <div class="bgbanner left-bgbanner">
    <div class="bgbanner-content">
      <h1>{{ section.settings.left_banner_title }}</h1>
      <p>{{ section.settings.left_banner_subtitle }}</p>
      <div class="bgbanner-button-mobile">
        <a href="{{section.settings.left_banner_link}}">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
    <div class="bgbanner-button">
      <a href="{{section.settings.left_banner_link}}">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
  <div class="bgbanner right-bgbanner">
    <div class="bgbanner-content">
      <h1>{{ section.settings.right_banner_title }}</h1>
      <p>{{ section.settings.right_banner_subtitle }}</p>
      <div class="bgbanner-button-mobile">
        <a href="{{section.settings.left_banner_link}}">
          {{ section.settings.button_text }}
        </a>
      </div>
    </div>
    <div class="bgbanner-button">
      <a href="{{section.settings.left_banner_link}}">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

